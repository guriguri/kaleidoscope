<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- properties -->
	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:application-context-test.properties</value>
			</list>
		</property>
	</bean>

	<bean id="uploaderServer" class="kaleidoscope.uploader.server.UploaderServer"
		p:handler-ref="httpRequestHandler" p:domain="${kaleidoscope.uploader.domain}"
		p:port="${kaleidoscope.uploader.port}" />

	<bean id="httpRequestHandler" class="kaleidoscope.uploader.server.HttpRequestHandler"
		p:rootPath="${kaleidoscope.root.path}" p:cmd="${kaleidoscope.cmd}"
		p:outfileExt="${kaleidoscope.outfile.ext}" p:defaultResize="${kaleidoscope.default.resize}"
		p:maxUploadFileSize="${kaleidoscope.max.upload.file.size}"
		p:maxThumbnailCount="${kaleidoscope.max.thumbnail.count}" p:expireSec="${kaleidoscope.expire.sec}" />

	<bean id="fileRemover" class="kaleidoscope.uploader.server.FileRemover"
		p:rootPath="${kaleidoscope.root.path}" p:expireSec="${kaleidoscope.expire.sec}" />
</beans>
