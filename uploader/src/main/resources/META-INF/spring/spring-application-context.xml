<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- properties -->
	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:application-context.properties</value>
			</list>
		</property>
	</bean>

	<bean id="uploaderServer" class="kaleidoscopic.uploader.server.UploaderServer"
		p:handler-ref="httpRequestHandler" p:domain="${kaleidoscopic.uploader.domain}"
		p:port="${kaleidoscopic.uploader.port}" init-method="start"
		destroy-method="destroy" />

	<bean id="httpRequestHandler" class="kaleidoscopic.uploader.server.HttpRequestHandler"
		p:rootPath="${kaleidoscopic.root.path}" />
</beans>
